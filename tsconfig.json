{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src": ["./src/*"],
      // "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@contexts": ["src/contexts/*"],
      "@services": ["src/services/*"],
      "@styles/*": ["./src/styles/*"],
      "@navigation": ["src/navigation/"],
      "@types": ["src/types/*"],
      "@constant": ["src/constant/*"],
      "@features": ["src/features/*"],
      "@shared/*": ["src/shared/*"],
      // "@languages": ["src/languages/"],
      "@hocs": ["src/hocs/*"]
    }
  }
}
